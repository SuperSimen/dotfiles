#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

super + w
	bspc window -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + e
	bspc desktop -E

super + {s,f}
	bspc window -t {floating,fullscreen}

super + Tab
	bspc desktop -f last

super + apostrophe
	bspc window -s last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

super + m
	bspc window -s biggest

super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
	bspc window -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + {Up,Down}
	bspc desktop -f {prev,next}

super + {Left,Right}
	bspc monitor -f {prev,next}

super + shift + {Left,Right}
	bspc window -m {left,right};

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

super + @KP_{End,Down,Next,Left,Begin,Right,Home,Up,Prior}
        bspc desktop -f ^{1,2,3,4,5,6,7,8,9}

super + shift + @KP_{End,Down,Next,Left,Begin,Right,Home,Up,Prior}
        bspc window -d ^{1,2,3,4,5,6,7,8,9}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	urxvt

super + shift + Return
	urxvt -e ssh $sshHost

super + space
	dmenu_run

#Program shortcuts
ctrl + space ; {f,s,e,n,c}
	{firefox, spotify, evince, nautilus, chromium}

# Chrome-apps
ctrl + space ; a ; {s,e,p,j}
	{chromium --app=https://nettbureau.slack.com, chromium --app=https://www.evernote.com/Home.action, chromium --app=http://overapi.com/php/, chromium --app=http://overapi.com/javascript/}

super + {_,shift + }minus
	bspwm_cycleWindowsOfSameClass {next,prev}

super + {_,shift + }r
    bspc desktop -F {vertical,horizontal}

super + {_,shift + }u
    {hideActiveWindow,unhideLastHiddenWindow}

super + {_,shift + }plus
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))


# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

