#
# bspwm hotkeys
#
#

super + alt + Escape
	bspc quit

super + w
	bspc window -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + e
	bspc desktop -E

super + {s,f}
	bspc window -t {floating,fullscreen}

super + shift + f
    bspc desktop -f next.free

super + {_,ctrl +}{o,i}
	bspc control --record-history off; \
	bspc {window,monitor} {older,newer} -f; \
	bspc control --record-history on

super + shift + {o,i}
	bspc control --record-history off; \
	bspc desktop {older.local,newer.local} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

super + m
	bspc window -s biggest

super + {h,j,k,l}
	bspc window -f {left,down,up,right}

super + shift + {h,l}
	bspc monitor -f {prev,next}

super + shift + {j,k}
	bspc desktop -f {next,prev}

super + Tab
	bspc monitor -f last

super + alt + {1,2,3}
	bspc monitor -f {^1,^2,^3}

super + apostrophe
	bspc window -s last

super + {Left,Down,Up,Right}
	bspc window -s {left,down,up,right}

super + shift + {Left,Right}
	bspc window -m {prev,next}

super + {_,shift + }c
	bspc window -f {next,prev}

super + {_,shift + }period
	bspc desktop -C {forward,backward}

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1,2,3,4,5,6,7,8,9}
	bspc window -r 0.{1,2,3333,4,5,6666,7,8,9}

super + {1-9,0}
	bspc desktop -f ^$(bspwm_convertDesktopNumber {1-9,10})

super + shift + {1-9,0}
	bspc window -d ^$(bspwm_convertDesktopNumber {1-9,10})

super + @KP_{End,Down,Next,Left,Begin,Right,Home,Up,Prior}
    bspc desktop -f ^$(bspwm_convertDesktopNumber {1,2,3,4,5,6,7,8,9})

super + shift + @KP_{End,Down,Next,Left,Begin,Right,Home,Up,Prior}
    bspc window -d ^$(bspwm_convertDesktopNumber {1,2,3,4,5,6,7,8,9})

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

super + Return
	urxvt -cd $(pwd)

super + {_,shift + }minus
	bspwm_cycleWindowsOfSameClass {next,prev}

super + {_,shift + }r
    bspc desktop -F {vertical,horizontal}

super + {_,shift + }u
    {hideActiveWindow,unhideLastHiddenWindow}

super + {_,shift + }plus
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 50 ))

# Dmenu
super + space
	dmenu_run

# Programs
ctrl + space ; {f,s,e,n,c}
	{firefox, spotify, evince, nautilus, chromium}

# Chrome-apps
ctrl + space ; a ; {s,e,p,j,w,m}
	{chromium --app=https://nettbureau.slack.com, chromium --app=https://www.evernote.com/Home.action, chromium --app=http://overapi.com/php/, chromium --app=http://overapi.com/javascript/, chromium --app=https://www.wunderlist.com/, chromium --app=https://www.facebook.com/messages/}

# Folders
ctrl + space ; u ; {t,m,l}
	{urxvt -cd ~/src/test.no/, urxvt -cd ~/src/mobiltelefoni.no/asset, urxvt -cd ~/src/l√•n.nu}

# SSH
ctrl + space ; u ; {1,2,3,4}
	{urxvt -e ssh vil1.net, urxvt -e ssh osl2.net, urxvt -e ssh osl3.net, urxvt -e ssh osl4.net}


# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

