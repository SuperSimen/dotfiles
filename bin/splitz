list=(
	"urxvt &"
	"urxvt &"
	"urxvt &"
	"urxvt &"
	"urxvt &"
	"urxvt &"
	"urxvt &"
	"urxvt &"
	"urxvt &"
	"urxvt &"
)
function loop {
	for ((i = 0; i < ${#list[@]}; i++))
	do
		echo ${list[i]}
		if [ "${list[i]}" == "wait" ]
		then
			read value
		else
			eval ${list[i]}
		fi

	done
}

bspc control --subscribe | loop
