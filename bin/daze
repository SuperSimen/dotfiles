#! /bin/bash

function DP1Connected {
	! xrandr | grep -c "DP1 disconnected"
}

function DP2Connected {
	! xrandr | grep -c "DP2 disconnected"
}

function enableDP {
	if $1 and $2
	then
		echo yeah
		xrandr --output DP1 --auto --primary --output DP2 --auto --right-of DP1 --output eDP1 --off
	else
            if $1
            then
                xrandr --output DP1 --auto --output eDP1 --off
		echo nope
		xrandr --output eDP1 --auto
            else
                if $2
                then
                    xrandr --output DP2 --auto --output eDP1 --off
                else
                    xrandr --output eDP1 --auto
                fi
            fi
	fi
}

enableDP DP1Connected DP2Connected

xrandr --output HDMI-0 --off
